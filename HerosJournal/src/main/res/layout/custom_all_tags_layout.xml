<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_margin="@dimen/tag_card_view_margin"
        android:elevation="@dimen/tag_card_view_elevation">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cardview_panel" />

        <RelativeLayout
            android:id="@+id/each_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tag_title_bottom_margin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/todo_info_demo_tag_text"
                android:textColor="@color/redFlag"
                android:textSize="@dimen/tag_title_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tags_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/tag_option_icon_margin_right"
                android:layout_marginTop="@dimen/tag_option_icon_margin_top"
                android:src="@drawable/ic_tags_options"
                tools:visibility="gone" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>