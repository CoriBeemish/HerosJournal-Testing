<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Beemish.HerosJournal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.RealmInitApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.Beemish.HerosJournal.activities.MainActivity"
            android:label="@string/app_name">
        </activity>

        <activity android:name=".activities.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.RegisterActivity"></activity>

        <activity
            android:name="com.example.Beemish.HerosJournal.activities.CompletedTodos"
            android:parentActivityName="com.example.Beemish.HerosJournal.activities.MainActivity" />
        <activity
            android:name="com.example.Beemish.HerosJournal.activities.AllTags"
            android:parentActivityName="com.example.Beemish.HerosJournal.activities.MainActivity" />
        <activity
            android:name="com.example.Beemish.HerosJournal.activities.AppSettings"
            android:parentActivityName="com.example.Beemish.HerosJournal.activities.MainActivity">
        </activity>
    </application>

</manifest>